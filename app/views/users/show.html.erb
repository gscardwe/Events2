<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
		<%= link_to "New event?", create_path, :class => "newevent_button round" %>
      </h1>
	  <% unless @user.events.empty? %>
		<table class="events" summary="User events">
			<%= render @events %>
		</table>
		<%= will_paginate @events%>
	  <% end %>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.username %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %><br />
	  <strong>Events</strong> <%= @user.events.count %>
	  <%= render 'shared/stats' %>
    </td>
  </tr>
</table>