<table summary="Information about following/followers">
  <tr>
    <td class="main">
      <h1><%= @title %></h1>
      
      <% unless @users.empty? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate @users %>
      <% end %>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.username %><br />
      <strong>URL</strong> <%= link_to user_path(@user), @user %><br />
      <strong>Events</strong> <%= @user.events.count %>
      <%= render 'shared/stats' %>
    </td>
  </tr>
</table>
